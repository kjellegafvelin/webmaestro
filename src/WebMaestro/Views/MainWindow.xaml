<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WebMaestro.Controls"
        xmlns:views="clr-namespace:WebMaestro.Views"
        xmlns:fluent="urn:fluent-ribbon"
        xmlns:cmds="clr-namespace:WebMaestro.Commands"
        xmlns:converters="clr-namespace:WebMaestro.Converters"
        xmlns:vm="clr-namespace:WebMaestro.ViewModels"
        xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs" xmlns:selectors="clr-namespace:WebMaestro.Selectors" xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    md:DialogServiceViews.IsRegistered="True"
        x:Class="WebMaestro.Views.MainWindow"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainView}"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="WebMaestro" Height="{Binding AppState.MainWindowHeight, Mode=TwoWay}" Width="{Binding AppState.MainWindowWidth, Mode=TwoWay}" 
        Top="{Binding AppState.MainWindowTop, Mode=TwoWay}" Left="{Binding AppState.MainWindowLeft, Mode=TwoWay}" MinWidth="800" MinHeight="600"
        ThemeMode="Light">
    <Window.CommandBindings>
        <CommandBinding Command="cmds:WindowCommands.SaveToCollection" Executed="SaveToCollectionExecuted" CanExecute="SaveToCollectionCanExecute" />
        <CommandBinding Command="cmds:WindowCommands.SendRequest" Executed="SendRequestExecuted" CanExecute="SendRequestCanExecute" />
        <CommandBinding Command="cmds:WindowCommands.CancelRequest" Executed="CancelRequestExecuted" CanExecute="CancelRequestCanExecute"/>
        <CommandBinding Command="cmds:WindowCommands.StartServer" Executed="StartServerExecuted" CanExecute="StartServerCanExecute" />
        <CommandBinding Command="cmds:WindowCommands.SendRequest" Executed="StopServerExecuted" CanExecute="StopServerCanExecute" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Gesture="CTRL+N" Command="{Binding NewRequestCommand}" />
        <KeyBinding Gesture="CTRL+M" Command="{Binding NewServerCommand}" />
        <KeyBinding Gesture="ALT+F4" Command="{Binding ExitCommand}" />
        <KeyBinding Gesture="CTRL+S" Command="{Binding SaveCommand}" />
    </Window.InputBindings>
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="boolToVisibility" />
            <converters:TabItemConverter x:Key="tabItem" />

            <Style x:Key="RequestStyle" TargetType="{x:Type controls:CloseableTabItem}">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="#3B88C6"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#4299E1" />
                        <Setter Property="Foreground" Value="White" />
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#4299E1" />
                        <Setter Property="Foreground" Value="White" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ServerStyle" TargetType="{x:Type controls:CloseableTabItem}">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="#255696"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#2C65B1" />
                        <Setter Property="Foreground" Value="White" />
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#2C65B1" />
                        <Setter Property="Foreground" Value="White" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <selectors:TabItemStyleSelector x:Key="tabItemStyleSelector"
                                            RequestStyle="{StaticResource RequestStyle}"
                                            ServerStyle="{StaticResource ServerStyle}"/>

        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>

        <Menu DockPanel.Dock="Top" FontSize="12" Margin="0,-8,0,0" IsMainMenu="True" WindowChrome.IsHitTestVisibleInChrome="True"  Width="120" HorizontalAlignment="Left">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_Check for updates" Click="CheckForUpdates">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Images/icons8-download-from-the-cloud-32.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Visit website" Click="VisitWebsite">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Images/icons8-online-store-32.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Support" Click="GotoSupport">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Images/icons8-technical-support-32.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_About" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="/Resources/Images/icons8-about-32.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <ToolBar DockPanel.Dock="Top" ToolBarTray.IsLocked="True" Margin="0,-10,0,0">
            <Button Command="{Binding NewRequestCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/icons8-individual-server-32.png" Width="16" Height="16" />
                    <TextBlock Margin="8,0,0,0">New Request</TextBlock>
                </StackPanel>
            </Button>
            <Button Command="{Binding ImportRawHttpCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/icons8-individual-server-32.png" Width="16" Height="16" />
                    <TextBlock Margin="8,0,0,0">Import Raw Http</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="{Binding NewServerCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/icons8-stack-32.png" Width="16" Height="16" />
                    <TextBlock Margin="8,0,0,0">New Mock API</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="{Binding SaveCommand}" IsEnabled="{Binding SelectedTabItem.Observer.IsModified, FallbackValue=false}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/icons8-save-32.png" Width="16" Height="16" />
                    <TextBlock Margin="8,0,0,0">Save</TextBlock>
                </StackPanel>

            </Button>
            <Separator />

            <Button Command="{Binding PrettifyCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/icons8-swiss-army-knife-open-32.png" Width="16" Height="16" />
                    <TextBlock Margin="8,0,0,0">Prettify</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="{Binding EscapeJsonCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/icons8-swiss-army-knife-open-32.png" Width="16" Height="16" />
                    <TextBlock Margin="8,0,0,0">Escape JSON</TextBlock>
                </StackPanel>
            </Button>
        </ToolBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"  />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Margin="8,0,8,4" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="208.065" />
                    <ColumnDefinition Width="41.935"/>
                    <ColumnDefinition Width="3" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <views:ExplorerView Grid.Column="0" Grid.ColumnSpan="2"></views:ExplorerView>

                <GridSplitter Grid.Column="2" Width="3" Grid.ColumnSpan="2" Margin="0,0,542,0"/>

                <controls:CloseableTabControl Grid.Column="3" x:Name="tabs" ItemsSource="{Binding ViewModels}" SelectedItem="{Binding SelectedTabItem, Converter={StaticResource tabItem}}" ItemContainerStyleSelector="{StaticResource tabItemStyleSelector}" AllowAddNew="False">
                    <controls:CloseableTabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding Tooltip}">
                                <TextBlock FontWeight="SemiBold" FontSize="14" Text="{Binding Name}" MaxWidth="210" TextTrimming="CharacterEllipsis" />
                                <TextBlock FontWeight="SemiBold" FontSize="14" Visibility="{Binding Observer.IsModified, Converter={StaticResource boolToVisibility}}" Text=" *"/>
                            </StackPanel>
                        </DataTemplate>
                    </controls:CloseableTabControl.ItemTemplate>
                    <controls:CloseableTabControl.Resources>
                        <DataTemplate DataType="{x:Type vm:WebViewModel}">
                            <views:WebView DataContext="{Binding}"></views:WebView>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:WebServerViewModel}">
                            <views:WebServerView DataContext="{Binding}"></views:WebServerView>
                        </DataTemplate>
                    </controls:CloseableTabControl.Resources>
                </controls:CloseableTabControl>
            </Grid>


            <StatusBar Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Public IP Address:" Margin="10,0"/>
                        <TextBlock Text="{Binding PublicIPAddress}">
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy to clipboard" Command="{Binding CopyPublicIPAddressCommand}">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Images/Copy_16x.png" Width="16" Height="16" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>

</Window>
